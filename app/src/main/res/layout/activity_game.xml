<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8FA"
    tools:context=".Game">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_marginTop="110dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/a1L"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="#96A8A7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/a1_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="a1_turn"
                    android:paddingLeft="45dp"
                    android:paddingTop="40dp"
                    android:textSize="36sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/a2L"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="#96A8A7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/a2_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="a2_turn"
                    android:paddingLeft="45dp"
                    android:paddingTop="40dp"
                    android:textSize="36sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/a3L"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="#96A8A7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/a3_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="a3_turn"
                    android:paddingLeft="45dp"
                    android:paddingTop="40dp"
                    android:textSize="36sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/b1L"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="#96A8A7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/b1_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="b1_turn"
                    android:paddingLeft="45dp"
                    android:paddingTop="40dp"
                    android:textSize="36sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/b2L"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="#96A8A7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/b2_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="b2_turn"
                    android:paddingLeft="45dp"
                    android:paddingTop="40dp"
                    android:textSize="36sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/b3L"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="#96A8A7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/b3_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="b3_turn"
                    android:paddingLeft="45dp"
                    android:paddingTop="40dp"
                    android:textSize="36sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/c1L"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#96A8A7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/c1_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="c1_turn"
                    android:paddingLeft="45dp"
                    android:paddingTop="40dp"
                    android:textSize="36sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/c2L"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#96A8A7"
                android:onClick="c2_turn"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/c2_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="c2_turn"
                    android:paddingLeft="45dp"
                    android:paddingTop="40dp"
                    android:textSize="36sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/c3L"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#96A8A7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/c3_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="c3_turn"
                    android:paddingLeft="45dp"
                    android:paddingTop="40dp"
                    android:textSize="36sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="91dp"
        android:layout_height="44dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="Reset"
        android:text="Reset"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.657" />

    <TextView
        android:id="@+id/p1"
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="36dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:text="Player 1 : X"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p2"
        android:layout_width="95dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:text="Player 2 : O"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>